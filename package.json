{
  "name": "file-uploader",
  "private": true,
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "node ./build/index.js",
    "dev:all": "npm run tw && run-p dev ts:watch",
    "dev": "nodemon ./index.ts",
    "ts:dev": "tsc --project tsconfig.browser.json",
    "ts:watch": "npm run ts:dev -- --watch",
    "ts:build": "tsc && npm run ts:build:public",
    "ts:build:public": "tsc --project tsconfig.browser.prod.json",
    "tw": "tailwind build src/static/css/app.css -o public/css/app.css",
    "tw:build": "cross-env NODE_ENV=production tailwind build ./src/static/css/app.css -o ./build/public/css/app.css",
    "njk:build": "copyfiles ./src/views/*.njk ./build/",
    "build": "del-cli ./build && npm-run-all tw:build ts:build njk:build",
    "postinstall": "npm run build"
  },
  "keywords": [
    "express",
    "nunjucks",
    "tailwind",
    "typescript",
    "darkmode"
  ],
  "author": "Alaladdin",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "@types/express": "^4.17.11",
    "@types/multer": "^1.4.5",
    "@types/node": "^15.0.2",
    "@types/nunjucks": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "autoprefixer": "^10.2.5",
    "copyfiles": "^2.4.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.14",
    "tailwind": "^4.0.0",
    "tailwindcss": "^2.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
